					<top>180</top>
					<height>630</height>
					<width>1680</width>
					<centerleft>50%</centerleft>
					<orientation>vertical</orientation>
					<scrolltime tween="sine" easing="inout">180</scrolltime>
					<timeblocks>27</timeblocks><!-- each 1 = 5 mins, so 12 = 1h, 24 = 2h, etf-->
