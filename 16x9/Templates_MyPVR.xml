					<rulerlayout width="210" height="90">
						<control type="label" id="2">
							<label>$INFO[ListItem.Label]</label>
							<font>PVR_Time</font>
							<width>1020</width>
							<centertop>50%</centertop>
							<height>30</height>
							<textcolor>$VAR[Light_Color]</textcolor>
							<textoffsetx>10</textoffsetx>
