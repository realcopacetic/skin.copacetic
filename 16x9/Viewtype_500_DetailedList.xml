<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="DetailedListView_Display">
		<param name="id" default="500" />
		<param name="art_icon" default="Thumbnail" />
		<param name="media_view" default="true" />
		<param name="widget_view" default="false" />
		<param name="widget_position" />
		<definition>
			<include content="Viewtype_Display_Template">
				<param name="viewtype_label" value="DetailedList" />
				<param name="media_view" value="$PARAM[media_view]" />
				<include content="Trailer_Autoplay_Fade_Animation" condition="Skin.HasSetting(Trailer_Autoplay)" />
				<include content="DetailedListView_Art">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
				</include>
			</include>
		</definition>
	</include>

	<include name="DetailedListView_Container">
		<param name="visible" default="true" />
		<definition>
			<include content="Viewtype_Details_Including_Content_Switching_Template">
				<param name="viewtype_label" value="DetailedList" />
				<include content="Default_Dialog_Panel_Layout">
					<param name="panel_edge_bottom" value="0" />
					<control type="fixedlist" id="500">
						<viewtype label="DetailedList">list</viewtype>
						<left>120</left>
						<right>120</right>
						<top>240</top>
						<bottom>0</bottom>
						<focusposition>1</focusposition>
						<movement>1</movement>
						<preloaditems>2</preloaditems>
						<pagecontrol>60</pagecontrol>
						<orientation>vertical</orientation>
						<onleft>SetFocus(3000,0,absolute)</onleft>
						<onright>60</onright>
						<onfocus condition="Container.Content(favourites)">Skin.SetString(favourites_Viewmode,DetailedList)</onfocus>
						<include content="Default_Scrolltime" condition="!Skin.HasSetting(Quick_Transitions)" />
						<include content="Quick_Scrolltime" condition="Skin.HasSetting(Quick_Transitions)" />
						<itemlayout width="1680" height="240">
							<include content="DetailedListView_Layout" />
						</itemlayout>
						<focusedlayout width="1680" height="240" infoupdate="50">
							<include content="HiddenFocusButton" />
							<include content="Multiart_Resetter" condition="Skin.HasSetting(Multiart_Slideshow)" />
							<include content="Multiart_Setter" condition="Skin.HasSetting(Multiart_Slideshow)" />
							<control type="image">
								<texture border="10" colordiffuse="$VAR[PVR_DetailedListView_Focus_Color]">views/white_100_rounded10.png</texture>
							</control>
							<include content="DetailedListView_Layout">
								<param name="multiart" value="true" />
							</include>
						</focusedlayout>
					</control>
				</include>
			</include>
		</definition>
	</include>

</includes>